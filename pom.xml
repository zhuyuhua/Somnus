		<mysqldb.version>5.1.10</mysqldb.version>
		<c3p0.version>0.9.1.2</c3p0.version>

		<!-- 测试庄1.7 -->
		<junit.version>4.11</junit.version>
		<mockito.version>1.9.5</mockito.version>
		<hamcrest.version>1.3</hamcrest.version>
		<dbunit.version>2.4.9</dbunit.version>
		<logback.version>1.1.2</logback.version>

		<!-- Maven 插件 -->
		<maven.compiler.plugin>3.1</maven.compiler.plugin>
		<maven.enforcer.plugin>1.4</maven.enforcer.plugin>
		<maven.version.range>[3.0.0,3.2.2]</maven.version.range>
		<maven.clean.plugin>2.6.1</maven.clean.plugin>
		<maven.resources.plugin>2.7</maven.resources.plugin>
		<maven.surefire.plugin>2.16</maven.surefire.plugin>
		<maven.surefire.report.plugin>2.16</maven.surefire.report.plugin>
		<maven.jar.plugin>2.5</maven.jar.plugin>
		<maven.install-plugin>2.5.2</maven.install-plugin>
		<maven.deploy.plugin>2.8.2</maven.deploy.plugin>
		<maven.site.plugin>3.4</maven.site.plugin>
		<maven.shade.plugin>2.3</maven.shade.plugin>
		<maven.jetty.plugin>6.1.26</maven.jetty.plugin>
		<maven.antrun.plugin>1.8</maven.antrun.plugin>
		<jetty.console.maven.plugin>1.43</jetty.console.maven.plugin>
		<maven.war.plugin>2.6</maven.war.plugin>
		<maven.tomcat7.version>2.2</maven.tomcat7.version>
